<%- include('../partials/header') %>

<h2 class="ml-4">Enter a new city</h2>
<% if (user) { %>

<div class="form-group ml-4" id="new-city">
  <form action="/cities" method="POST">
    <label
      >Name of your City or Town:
      <input class="form-control" type="text" name="name" required />
    </label>
    <br />
    <label
      >Country:
      <input class="form-control" type="text" name="country" required />
    </label>
    <br />
    <label
      >Name of State, Province, or Territory:
      <input class="form-control" type="text" name="state" />
    </label>
    <br />
    <label>
      Population:
      <input class="form-control" type="number" name="population" />
    </label>
    <br />
    <div class="form-check">
      <input class="form-check-input" type="checkbox" name="capital" checked />
      <label>Capital City</label>
    </div>
    <label
      >Image URL:
      <input class="form-control" type="text" name="img" />
    </label>
    <!-- <label
    >Image:
    <input type="file" name="img" />
  </label> -->
    <br />
    <button type="submit" class="btn btn-success">Add City</button>
  </form>
</div>

<% } else { %>
<h3>Must be logged in to enter a new city</h3>
<% } %>
<br />
<%- include('../partials/footer') %>
