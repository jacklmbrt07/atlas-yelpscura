<%- include('../partials/header') %>

<br />
<h4>Edit <%= landmark.name %></h4>
<div class="container">
  <div class="row">
    <form action="/landmarks/<%= landmark._id %>/" method="POST">
      <div class="input-field col s3">
        <label>Name: </label>
        <input type="text" name="name" value="<%= landmark.name %>" />
      </div>
      <div class="input-field col s3">
        <label>Address: </label>
        <input type="text" name="address" value="<%= landmark.address %> " />
      </div>
      <div class="input-field col s3">
        <label>image: </label>
        <input type="text" name="img" value="<%= landmark.img %> " />
      </div>
      <div class="input-field col s3">
        <label>Type: </label>
        <select name="category" required>
          <option value="Nature">Nature</option>
          <option value="History">History</option>
          <option value="Science">Science</option>
          <option value="Food">Food</option>
          <option value="Art">Art</option>
          <option value="Architecture">Architecture</option>
          <option value="Religious">Religious</option>
        </select>
      </div>
      <button type="submit">Change Landmark</button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
